                                        <td style="width: 300px; height: auto;"><img id="img-table-cus"
                                                src="{{this.anh_banner}}" alt="Hình ảnh" /></td>
                                        <td>
                                            <button type="button" class="btn-delete" data-toggle="modal"
                                                data-target="#ModalDel" data-id="{{this.id}}">
                                                Xoá
                                            </button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
