    <div class="page-wrapper">
      <div class="container-fluid">
        <!-- Thông báo khi thao tác với tác vụ CRUD --->
        {{#if success}}
        <div class="alert alert-success" role="alert">
          {{success}}
        </div>
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger" role="alert">
          {{error}}
        </div>
        {{/if}}
        {{#if warning}}
        <div class="alert alert-danger" role="alert">
          {{warning}}
        </div>
        {{/if}}
        <div class="row">
          <div class="col-12">
            <div class="card" style="padding: 20px;">
              <div class="card-body-cus">
                <h5 class="card-title m-b-0">Danh sách nhân viên ({{employees.length}})</h5>
                <a href="/admin/employee/page-insert" class="button-26" style="color: white;">Thêm nhân
                  viên</a>
              </div>
              <table class="table" id="myTable" style="width: 100%;">
                <thead>
                  <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Ảnh</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Điện thoại</th>
                    <th scope="col">Tên đănh nhập</th>
                    <th scope="col">Mật khẩu</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Giới tính</th>
                    <th scope="col">Ngày sinh</th>
                    <th scope="col">Tác vụ</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each employees}}
                  <tr>
                    <th scope="row" style="width: 5%;">{{calculateIndex @index}}</th>
                    <td style="width: 10%;"> <img src="{{this.anh_dai_dien}}" alt="Circular Image"
                        class="circular-image">
                    </td>
                    </td>
                    <td style="width: 10%;">{{this.ho_va_ten}}</td>
                    <td style="width: 10%;">{{this.dien_thoai}}</td>
                    <td style="width: 10%;">{{this.ten_dang_nhap}}</td>
                    <td style="width: 10%;">{{this.mat_khau}}</td>
                    <td style="width: 10%;">{{this.dia_chi}}</td>
                    <td style="width: 10%;">{{this.gioi_tinh}}</td>
                    <td style="width: 10%;">{{formatDate this.ngay_sinh}}</td>
                    <td style="width: 10%;">
                      <button type="button" class="btn-delete" data-toggle="modal" data-target="#delete-product-modal"
                        data-id="{{this.ten_dang_nhap}}">
                        Xoá
                      </button>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!--Modal sản phẩm-->
        <div class="modal" tabindex="-1" role="dialog" id="delete-product-modal">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Hệ thống</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <p>Bạn có muốn xoá nhận viên?</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                <form name="form-del-emp" method="post">
                  <input type="hidden" id="ten_dang_nhap_input" name="employeeID">
                  <button href="#" type="submit" class="btn-delete-confirm" style="color: white;">Xoá</button>
                </form>
              </div>
            </div>
          </div>
        </div>
