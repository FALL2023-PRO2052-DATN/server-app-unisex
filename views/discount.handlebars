        <div class="page-wrapper">
            <!-- Thông báo khi thao tác với tác vụ CRUD --->
            <div class="container-fluid">
                {{#if success}}
                <div class="alert alert-success" role="alert">
                    {{success}}
                </div>
                {{/if}}
                {{#if error}}
                <div class="alert alert-danger" role="alert">
                    {{error}}
                </div>
                {{/if}}
                {{#if warning}}
                <div class="alert alert-warning" role="alert">
                    {{warning}}
                </div>
                {{/if}}
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card" style="padding: 20px;">
                            <div class="card-body-cus">
                                <h5 class="card-title m-b-0">Danh sách mã giảm giá ({{discounts.length}})</h5>
                                <button type="button" class="button-26" data-toggle="modal"
                                    data-target="#add-discount-modal" data-whatever="@mdo">Thêm mã giảm giá</button>
                            </div>
                            <table class="table" id="myTable" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Mã code</th>
                                        <th scope="col">Giá trị</th>
                                        <th scope="col">Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each discounts}}
                                    <tr>
                                        <th scope="row" style="width: 10%;">{{this.id}}</th>
                                        <td style="width: 30%;">{{this.code}}</td>
                                        <td style="width: 30%;">Giảm {{this.gia_tri}}%</td>
                                        <td style="width: 30%;">
                                            <button type="button" class="btn-update" data-toggle="modal"
                                                data-target="#update-discount-modal" data-json='{
                                                    "id": "{{this.id}}", 
                                                    "code": "{{this.code}}", 
                                                    "gia_tri": "{{this.gia_tri}}"
                                                    }'>
                                                Cập nhật
                                            </button>
                                            <button type="button" class="btn-delete" data-toggle="modal"
                                                data-target="#delete-discount-modal" data-id="{{this.id}}">
                                                Xoá
                                            </button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--Modal thêm mã giảm giá-->
                <div class="modal fade" id="add-discount-modal" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Thêm mã giảm giá</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form id="image-upload-form" action="/admin/discount/create" method="POST">
                                    <div class="form-group">
                                        <label for="image-upload" class="title-form">Mã code</label>
                                        <input type="text" data-toggle="tooltip" title="" class="form-control"
                                            id="validationDefault05" placeholder="Ví dụ: UNISEX-30" required=""
                                            data-original-title="A Tooltip for the input !" name="code">
                                    </div>
                                    <div class="form-group">
                                        <label for="image-upload" class="title-form">Giá trị giảm giá</label>
                                        <input type="number" data-toggle="tooltip" title="" class="form-control"
                                            id="validationDefault05" placeholder="Ví dụ: 10%" required=""
                                            data-original-title="A Tooltip for the input !" name="value" min="1"
                                            max="100">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Huỷ</button>
                                        <button style="color: white;" type="submit" class="button-26"
                                            id="upload-image">Thêm mới</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
                <!--Modal cập nhật mã giảm giá-->
                <div class="modal fade" id="update-discount-modal" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Cập nhật mã giảm giá</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form id="image-upload-form" action="/admin/discount/update" method="POST">
                                    <div class="form-group">
                                        <label for="image-upload" class="title-form">ID</label>
                                        <input type="text" data-toggle="tooltip" title="" class="form-control"
                                            id="id_giam_gia_update_input" placeholder="Ví dụ: 1" required="" name="id"
                                            data-original-title="A Tooltip for the input !" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="image-upload" class="title-form">Mã code</label>
                                        <input type="text" data-toggle="tooltip" title="" class="form-control"
                                            id="code_update_input" placeholder="Ví dụ: UNISEX-30" required=""
                                            name="code" data-original-title="A Tooltip for the input !">
                                    </div>
                                    <div class="form-group">
                                        <label for="image-upload" class="title-form">Giá trị giảm giá</label>
                                        <input type="number" data-toggle="tooltip" title="" class="form-control"
                                            id="gia_tri_update_input" placeholder="Ví dụ: 10%" required="" min="1"
                                            name="value" max="100" data-original-title="A Tooltip for the input !">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Huỷ</button>
                                        <button style="color: white;" type="submit" class="button-26"
                                            id="upload-image">Lưu</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!---Xử lý dữ liệu ở file discount.js-->
                <!--Modal xoá mã giảm giá-->
                <div class="modal" tabindex="-1" role="dialog" id="delete-discount-modal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Hệ thống</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Bạn có muốn xoá mã giảm giá?</p>
                            </div>
                            <form action="/admin/discount/delete" method="POST">
                                <div class="modal-footer">
                                    <input type="hidden" id="id_giam_gia_delete_input" name="id">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                                    <button type="submit" class="btn-delete-confirm" style="color: white;">Xoá</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
