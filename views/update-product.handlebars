                </div>
                {{/if}}
                {{#if warning}}
                <div class="alert alert-warning" role="alert">
                    {{warning}}
                </div>
                {{/if}}
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body-cus" style="margin: 20px;">
                                <h5 class="card-title m-b-0">Thông tin chung</h5>
                            </div>
                            <form style="margin-left: 20px; margin-right: 20px;" action="/admin/product/update"
                                method="POST" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col">
                                        <input type="hidden" value="{{ product.san_pham_id }}" name="idProduct">
                                        <label for="formGroupExampleInput" class="title-form">Tên sản phẩm</label>
                                        <input type="text" class="form-control" id="formGroupExampleInput"
                                            placeholder="Ví dụ: Áo thun trắng" value="{{product.ten_san_pham}}"
                                            name="name">
                                        <div class="mb-3">
                                            <label for="formFile" class="title-form">
                                                Chọn ảnh đại diện cho sản phẩm</label>
                                            <input class="form-control" type="file" id="formFile" name="image">
                                            <input type="hidden" value="{{product.hinh_anh}}" name="imgUrl">
                                            <div
                                                style="align-items: center; display: flex; text-align: center;flex-direction: column;                      ">
                                                <img src="{{product.hinh_anh}}" class="img-thumbnail"
                                                    style="margin-top: 10px; width: 200px; height: 200px;"
                                                    id="previewImage">
                                            </div>
                                        </div>
                                        <label for="formGroupExampleInput" class="title-form">Giá sản phẩm</label>
                                        <input type="text" class="form-control" id="priceInput" name="price"
                                            placeholder="Ví dụ: 200.000đ" value="{{product.gia_ban}}">
                                        <label for="formGroupExampleInput" class="title-form">Mô tả sản phẩm</label>
                                        <textarea class="form-control" aria-label="With textarea"
                                            name="description">{{product.mo_ta_chi_tiet}}</textarea>
                                        <label for="formGroupExampleInput" class="title-form">Thiết lập liên
                                            quan</label>
                                        <div class="form-check" style="margin-left: 20px;">
                                            <input class="form-check-input" type="checkbox" value="1" name="outstanding"
                                                id="flexCheckDefault" {{#equal product.noi_bat 1}} checked {{/equal}}>
                                            <label class="title-form-check-box" for="flexCheckDefault">
                                                Sản phẩm nổi bật
                                            </label>
                                        </div>
                                        <div class="form-check" style="margin-left: 20px;">
                                            <input class="form-check-input" type="checkbox" value="1" name="selling"
                                                id="flexCheckDefault1" {{#equal product.moi_nhat 1}} checked {{/equal}}>
                                            <label class="title-form-check-box" for="flexCheckDefault1">
                                                Sản phẩm mới về
                                            </label>
                                        </div>
                                        <label for="formGroupExampleInput" class="title-form">Danh mục</label>
                                        <select class="custom-select" name="idCategory">
                                            {{#each categories}}
                                            <option value="{{this.id_danh_muc}}" {{#equal this.id_danh_muc
                                                ../product.danh_muc_id}} selected {{/equal}}>
                                                {{this.ten_danh_muc}}
                                            </option>
                                            {{/each}}
                                        </select>
                                        <label for="formGroupExampleInput" class="title-form">Giảm giá</label>
                                        <input type="text" class="form-control" id="formGroupExampleInput"
                                            name="discount" placeholder="Ví dụ: 20(%)" value="{{product.giam_gia}}">
                                    </div>

                                </div>
                                <button id="addButton" class="button-26" type="submit"
                                    style="margin-top: 20px; margin-bottom: 20px;">Lưu thông tin</button>
                            </form>
                        </div>

                        <div class="card" style="padding: 20px;">
                            <div class="card-body-cus">
                                <h5 class="card-title m-b-0">Phiên bản sản phẩm</h5>
                                <button type="button" class="button-26" data-toggle="modal"
                                    data-target="#modal-add-size" data-whatever="@mdo">Thêm kích thước</button>
                            </div>
                            <table class="table" id="myTable" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Ảnh</th>
                                        <th scope="col">Phiên bản sản phẩm</th>
                                        <th scope="col">Tồn kho</th>
                                        <th scope="col">Tác vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each productsSize}}
                                    <tr>
                                        <th scope="row" style="width: 10%;">{{this.id}}</th>
                                        <td style="width: 10%"><img id="img-table-cus" src="{{this.anh_dai_dien}}"
                                                alt="Hình ảnh"></td>
                                        <td style="width: 30%;">{{this.ten_san_pham}} - {{this.ten_kich_thuoc}}</td>
                                        <td style="width: 30%;">{{this.so_luong_ton_kho}}</td>
                                        <td style="width: 30%;">
                                            <button type="button" class="btn-update" data-toggle="modal"
                                                data-target="#modal-update" data-json='{
                                                    "id_product_size": "{{this.id}}",
                                                    "so_luong": "{{this.so_luong_ton_kho}}",
                                                    "kich_thuoc_id": "{{this.kich_thuoc_id}}"
                                                }'>
                                                Cập nhật
                                            </button>
                                            <button type="button" class="btn-delete" data-toggle="modal"
                                                data-target="#delete-modal-size" data-id="{{this.id}}">
                                                Xoá
                                            </button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--Modal thêm kích thước-->
                <div class="modal" tabindex="-1" role="dialog" id="modal-add-size">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Thêm kích thước</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin/product-size/create" method="POST">
                                    <input type="hidden" name="idProduct" id="" value="{{product.san_pham_id}}">
                                    <label for="formGroupExampleInput" class="title-form">Kích thước</label>
                                    <select class="custom-select" name="size" id="sizeUpdate">
                                        {{#each sizes}}
                                        <option value="{{this.id}}" {{#equal this.id 0}}selected{{/equal}}>
                                            Size {{this.ten_kich_thuoc}}
                                        </option>
                                        {{/each}}
                                    </select>
                                    <label for="formGroupExampleInput" class="title-form">Số lượng</label>
                                    <input type="text" style="margin-top: 10px;" class="form-control" id="priceInput"
                                        placeholder="Số lượng sản phẩm " name="quantity">
                                    <div class="modal-footer" style="margin-top: 20px;">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Huỷ</button>
                                        <button href="#" type="submit" class="button-26"
                                            style="color: white;">Thêm</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Modal cập nhật-->
                <div class="modal" tabindex="-1" role="dialog" id="modal-update">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Cập nhật phiên bản</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin/product-size/update" method="POST">
                                    <label for="formGroupExampleInput" class="title-form">Id phiên bản</label>
                                    <input type="text" style="margin-top: 10px;" class="form-control"
                                        id="idProdctSizeUpdateInput" placeholder="Số lượng sản phẩm " name="idProductSize" readonly>
                                    <input type="hidden" name="idProduct" id="" value="{{product.san_pham_id}}">
                                    <label for="formGroupExampleInput" class="title-form">Kích thước</label>
                                    <select class="custom-select" name="size">
                                        {{#each sizes}}
                                        <option value="{{this.id}}">
                                            Size {{this.ten_kich_thuoc}}
                                        </option>
                                        {{/each}}
                                    </select>
                                    <input type="text" style="margin-top: 10px;" class="form-control"
                                        id="quantityInputUpdate" placeholder="Số lượng sản phẩm " name="quantity">
                                    <div class="modal-footer" style="margin-top: 20px;">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Huỷ</button>
                                        <button href="#" type="submit" class="button-26"
                                            style="color: white;">Lưu</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Modal xoá danh mục-->
                <div class="modal" tabindex="-1" role="dialog" id="delete-modal-size">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Hệ thống</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Bạn có muốn xoá kích thước sản phẩm</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                                <form action="/admin/product-size/delete-for-update-product" method="POST">
                                    <input type="hidden" name="idProduct" id="" value="{{product.san_pham_id}}">
                                    <input type="hidden" name="idProductSize" id="idProductSizeInput">
                                    <button href="#" type="submit" class="btn-delete-confirm"
                                        style="color: white;">Xoá</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
